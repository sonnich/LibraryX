<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.libraryx">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LibraryX">
        <activity
            android:name=".WebsiteActivity"
            android:exported="false"
            android:label="My Site"/>
        <activity
            android:name=".WantedBooks"
            android:exported="false"
            android:label="@string/wishlist"/>
        <activity
            android:name=".CurrentlyReadingActivity"
            android:exported="false"
            android:label="@string/currently_reading"/>
        <activity
            android:name=".FavouriteBooks"
            android:exported="false"
            android:label="@string/favourites"/>
        <activity
            android:name=".AlreadyReadBookActivity"
            android:exported="false"
            android:label="@string/finished_books"/>
        <activity
            android:name=".BookActivity"
            android:exported="false"
            />
        <activity
            android:name=".AllBooksActivity"
            android:exported="false"
            android:label="@string/all_books"/>
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>